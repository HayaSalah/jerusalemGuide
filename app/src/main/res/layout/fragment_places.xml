<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".screensFragments.places">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="The most prominent landmarks"
        android:layout_marginTop="25dp"
        android:textSize="23sp"
        android:textColor="@color/B"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:gravity="center_horizontal"
        />


    <TextView
        android:id="@+id/alaqsa_sheet"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/shape_text"
        android:layout_marginTop="25dp"
        android:text="@string/slides_text1"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:paddingEnd="115dp"
        android:paddingStart="115dp"
        android:paddingTop="15dp"
        android:fontFamily="casual"
        android:textStyle="bold"
        android:gravity="center_vertical" />

    <TextView
        android:id="@+id/alburaq_sheet"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/shape_text"
        android:text="@string/slides_text2"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:paddingEnd="115dp"
        android:layout_marginTop="25dp"
        android:paddingStart="115dp"
        android:paddingTop="15dp"
        android:fontFamily="casual"
        android:textStyle="bold"
        android:gravity="center_vertical" />

    <TextView
        android:id="@+id/alqiama_sheet"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/shape_text"
        android:text="@string/slides_text3"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:paddingEnd="115dp"
        android:layout_marginTop="25dp"
        android:paddingStart="115dp"
        android:paddingTop="15dp"
        android:fontFamily="casual"
        android:textStyle="bold"
        android:gravity="center_vertical" />

</LinearLayout>